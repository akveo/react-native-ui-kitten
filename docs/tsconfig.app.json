{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "target": "es5",
    "module": "es2015",
    "baseUrl": ".",
    "types": []
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "src/assets/**/*.ts",
    "dist/**/*"
  ]
}
